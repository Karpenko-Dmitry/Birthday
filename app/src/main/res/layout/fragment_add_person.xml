<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".context.AddPersonFragment">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="icon"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nickname_layout"
            app:errorEnabled="true"
            app:boxBackgroundColor="@color/fui_transparent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nickname"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="24dp"
                android:hint="@string/nickname"
                android:autofillHints="username"
                android:maxLength="15"
                android:inputType="textPersonName"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/birthday"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/nickname_layout"
            app:layout_constraintTop_toBottomOf="@+id/nickname_layout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.073"
            tools:layout_editor_absoluteX="-16dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/day_layout"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/fui_transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dayForm"
                    android:layout_width="match_parent"
                    android:maxLength="2"
                    android:layout_height="wrap_content"
                    android:hint="@string/choose_day"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:id="@+id/month"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:layout_marginBottom="3dp"
                android:layout_width="0dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:spinnerMode="dialog"
                android:entries="@array/months"
                android:layout_height="wrap_content">
            </Spinner>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/year_layout"
                android:layout_weight="2"
                android:layout_width="0dp"
                app:boxBackgroundColor="@color/fui_transparent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/yearForm"
                    android:maxLength="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/choose_year"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        app:menu="@menu/add_person_menu"
        app:fabAlignmentMode="end"
        app:navigationIcon="@drawable/ic_baseline_menu">
    </com.google.android.material.bottomappbar.BottomAppBar>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="confirm"
        app:layout_anchor="@id/bottom_app_bar"
        app:srcCompat="@drawable/ic_baseline_done">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
